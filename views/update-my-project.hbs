<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Update Project</title>
  <link rel="stylesheet" href="/css/addProject.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="addProject.css">
</head>

<body>
  {{> header}}

  <div class="d-flex flex-column align-items-center" style="padding-top: 80px;">
    <section class="form-section">
      <h1>UPDATE MY PROJECT</h1>
      <form id="projectForm" action="/update-my-project" method="POST" enctype="multipart/form-data">

        <label for="projectName">Project Name</label>
        <input type="text" id="projectName" name="projectName" required value="{{projectName}}">

        <div class="date-inputs">
          <div>
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" required value="{{startDate}}">
          </div>
          <div>
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" required value="{{endDate}}">
          </div>
        </div>

        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4" required>{{description}}</textarea>

        <label>Technologies</label>
        <div class="tech-checkboxes col-md-4" style="gap: 20px;">
          {{#each technologies}}
          <div class="shadow text-success" style="border-radius: 5px; padding: 5px 5px 0 0;">
            <input type="checkbox" id="{{this.id}}" name="technologies" value="{{this.value}}" {{#if
              this.checked}}checked{{/if}}>
            <label for="{{this.id}}">{{this.label}}</label>
          </div>
          {{/each}}
        </div>
        <div class="mt-3">
          <label for="uploadImage">Upload Image</label>
          <div class="image-preview">
            <img id="imagePreview" src="{{imageUrl}}" alt="Image Preview"
              style="display: {{#if imageUrl}}block{{else}}none{{/if}}; width: 20%; height: auto; border-radius: 7px;" />
          </div>
          <div class="file-upload" style="margin-top: 10px;">
            <input type="file" id="uploadImage" name="uploadImage" accept="image/*">
            <i class="fas fa-paperclip"></i>
          </div><br>

          <div class="d-flex justify-content-end">
            <button type="submit" class="bg-success">submit</button>
          </div>
        </div>
      </form>
    </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/js/update-my-project.js"></script>
</body>

</html>
