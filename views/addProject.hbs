<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add Project</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/addProject.css">
</head>

<body>
  {{> header}} <!-- Include header partial -->

  <div class="d-flex flex-column align-items-center" style="padding-top: 80px;">
    <section class="form-section shadow">
      <h1>ADD MY PROJECT</h1>
      <form id="projectForm" method="POST" action="/addProject" enctype="multipart/form-data">
        <label for="projectName">Project Name</label>
        <input type="text" id="projectName" name="projectName" required>

        <div class="date-inputs">
          <div>
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" required>
          </div>
          <div>
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" required>
          </div>
        </div>

        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4" required></textarea>

        <label>Technologies</label>
        <div class="tech-checkboxes col-md-6">
          <div class="checkbox-item">
            <input type="checkbox" id="nodejs" name="technologies" value="Node.js">
            <label for="nodejs">Node.js</label>
          </div>
          <div class="checkbox-item">
            <input type="checkbox" id="reactjs" name="technologies" value="React.js">
            <label for="reactjs">React.js</label>
          </div>
          <div class="checkbox-item">
            <input type="checkbox" id="nextjs" name="technologies" value="Next.js">
            <label for="nextjs">Next.js</label>
          </div>
          <div class="checkbox-item">
            <input type="checkbox" id="typescript" name="technologies" value="TypeScript">
            <label for="typescript">TypeScript</label>
          </div>
          <div class="checkbox-item">
            <input type="checkbox" id="angular" name="technologies" value="Angular">
            <label for="angular">Angular</label>
          </div>
          <div class="checkbox-item">
            <input type="checkbox" id="java" name="technologies" value="Java">
            <label for="java">Java</label>
          </div>
        </div>

        <div class="mt-3">
          <label for="uploadImage">Upload Image</label>
          {{!-- tempat review gambar --}}
          <img id="imagePreview" src="" alt="Image Preview"
            style="display:none; width: 20%; height: auto; border-radius: 7px;" />
          <div class="file-upload" style="margin-top: 10px;">
            <input type="file" id="uploadImage" name="uploadImage" accept="image/*" required>
          </div><br>
          <div class="d-flex justify-content-end">
            <button type="submit" class="bg-success">Submit</button>
          </div>
        </div>
      </form>
    </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/js/addProject.js"></script>
  <script src="../server.js"></script>
  {{> footer}} <!-- Include footer partial -->
</body>

</html>
