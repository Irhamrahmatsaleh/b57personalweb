<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Project Detail</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/project-detail.css">
</head>

<body>
  <!-- Navbar -->
  {{> header}}
  <!-- Main Content -->
  <main class="container shadow" style="padding-top: 80px; border-radius: 10px; margin-top: 10px; padding: 20px;">
    <!-- Project Title -->
    <div class="header-container" style="text-align:center">
      <h1 id="projectTitle">{{projectTitle}}</h1>
    </div>
    <br><br>

    <div class="image-and-info">
      <!-- Project Image -->
      <img id="projectImage" src="{{projectImage}}" alt="Project Image">

      <div class="info-section">
        <div class="duration-info">
          <!-- Project Duration -->
          <p id="projectDuration" style="font-weight: bold;">Duration</p>

          <!-- Date Range -->
          <div class="date-range">
            <i class="fas fa-calendar-alt"></i>
            <span id="dateRange">{{dateRange}}</span>
          </div>

          <!-- Duration in Months -->
          <div class="time-duration">
            <i class="fas fa-clock"></i>
            <span id="timeDuration">{{timeDuration}}</span>
          </div>
        </div>

        <div class="duration-info">
          <!-- Project Duration -->
          <p id="projectDuration" style="font-weight: bold;">Author</p>

          <!-- Date Range -->
          <div class="date-range">
            <i class="fas fa-user"></i>
            <span id="dateRange">{{authorName}}</span>
          </div>
        </div>

        <!-- Technologies Used -->
        <section class="technologies">
          <h2>Technologies Used</h2>
          <ul id="techList">
            {{#each technologies}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
        </section>
      </div>
    </div>
    <!-- Project Description -->
    <section class="description">
      <h2>Description</h2>
      <p id="projectDescription">{{projectDescription}}</p>
    </section>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/js/project-detail.js"></script>
</body>

</html>
