<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Testimonials</title>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/testimonials.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
  <!-- Navbar -->
  {{> header}}

  <main style="padding-top: 80px;">
    <section class="testimonials-section">
      <h1>My Testimonials</h1>
      <div id="filter-stars"
        class="filter-stars d-flex flex-wrap justify-content-center gap-2 p-3 border rounded text-center"
        style="background-color: #f8f9fa;">
        <button class="btn btn-outline-secondary rounded-pill" onclick="filterTestimonials('all')">All Stars</button>
        <button class="btn btn-outline-secondary rounded-pill" onclick="filterTestimonials(1)">
          <i class="fas fa-star text-warning"></i> 1 Star
        </button>
        <button class="btn btn-outline-secondary rounded-pill" onclick="filterTestimonials(2)">
          <i class="fas fa-star text-warning"></i> 2 Stars
        </button>
        <button class="btn btn-outline-secondary rounded-pill" onclick="filterTestimonials(3)">
          <i class="fas fa-star text-warning"></i> 3 Stars
        </button>
        <button class="btn btn-outline-secondary rounded-pill" onclick="filterTestimonials(4)">
          <i class="fas fa-star text-warning"></i> 4 Stars
        </button>
        <button class="btn btn-outline-secondary rounded-pill" onclick="filterTestimonials(5)">
          <i class="fas fa-star text-warning"></i> 5 Stars
        </button>
      </div>
      <div id="testimonials" class="testimonials-container" style="padding-top: 50px;">
        {{#each testimonials}}
        <div class="testimonial-card card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="{{this.image}}" class="img-fluid rounded-start" alt="{{this.name}}">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.testimonial}}</p>
                <p class="card-text">
                  <small class="text-muted">{{this.rating}} Stars</small>
                </p>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </section>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/js/fetch.js"></script>
</body>

</html>
